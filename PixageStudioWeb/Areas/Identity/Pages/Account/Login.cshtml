
@model MultiModel


<div class="text-danger" asp-validation-summary="All"></div>

<ul>
    
    <li class="dropdown">
        <form asp-action="Login" asp-controller="Account" method="post" style="margin:5px 5px 5px 5px">
            <input type="hidden" asp-for="login.ReturnUrl" />
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                Login
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">


                <li>
                    <label asp-for="login.Email"></label>
                    <input asp-for="login.Email" class="form-control" />
                </li>
                <li>
                    <label asp-for="login.Password"></label>
                    <input asp-for="login.Password" class="form-control" />
                </li>
                <li>
                <button class="btn btn-primary" type="submit">Log In</button>
                </li>
                

            </ul>

        </form>
    </li>

</ul>
